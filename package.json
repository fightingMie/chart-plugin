  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "publish:npm": "./scripts/publish.sh",
    "publish:quick": "./scripts/quick-publish.sh",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "react",
    "chart",
    "metric",
    "visualization",
    "plugin",
    "typescript",
    "echarts",
    "antd"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/react-metric-chart-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/react-metric-chart-plugin/issues"
  },
  "homepage": "https://github.com/yourusername/react-metric-chart-plugin#readme",
